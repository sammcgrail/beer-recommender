<div>
  <ul>
    <% @top_twenty.each do |user| %>
      <div class="user">
        <div class="faves">
          <%= link_to User.find(user.last).profile_name, user_path(user.last) %>
        </div>
          <div id="container">
            <div id="beaker">
              <div class="beer-foam">
                <div class="foam-1"></div>
                <div class="foam-2"></div>
                <div class="foam-3"></div>
                <div class="foam-4"></div>
                <div class="foam-5"></div>
                <div class="foam-6"></div>
              </div>

              <div id="liquid">
                <div class="bubble bubble1"></div>
                <div class="bubble bubble2"></div>
                <div class="bubble bubble3"></div>
                <div class="bubble bubble4"></div>
                <div class="bubble bubble5"></div>
              </div>

            </div>
          </div>

          <ul class="three">
            <% Score.user_top_three_picks(user.last).each do |beer| %>
              <li>
                <%= link_to Score.beer_name(beer.first), beer_path(beer.first.to_i) %>
              </li>
            <% end %>
          </ul>
      </div>
    <% end %>
  </ul>
</div>


