<% if @user.id == current_user.id %>
  <ul>
  <div>
    <% @user.reviews.each do |review| %>
      <li>
      <div>
        <%= link_to review.beer.name, beer_path(review.beer.id) %>
      </div>
      <div>
        <%= review.text %>
      </div>
      <div>
        <%= review.taste %>
      </div>
      </li>
    <% end %>
  </div>
  </ul>
<% else %>
  <div>
    <%= @user.profile_name %>'s reviews and ratings
  </div>
  <div>
    You have a <%= '%.0f' % (Score.simpearson(current_user.id, @user.id) * 100) %>% similarity with <%= @user.profile_name %>
  </div>

  <ul>
  <div>
    <% @user.reviews.each do |review| %>
      <li>
      <div>
        <%= link_to review.beer.name, beer_path(review.beer.id) %>
      </div>
      <div>
        <%= review.text %>
      </div>
      <div>
        <%= review.taste %>
      </div>
      </li>
    <% end %>
  </div>
  </ul>
<% end %>
